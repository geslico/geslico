<%= form_for @radio_site do |f| %>

  <% if @radio_site.errors.any? %>  
    <div class="panel warning callout radius">      
      <strong><%= t('activerecord.errors.template.header', :model => RadioSite.model_name.human, :count => @radio_site.errors.count) %></strong>
      <ul>
      <% @radio_site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 

  <div class="row">
    <div class="small-12 medium-2 large-2 columns">
      <%= f.label :nCodSite, 'Código' %>
      <%= f.number_field :nCodSite, readonly: @readonly %>       
    </div>    
    <div class="small-12 medium-4 large-4 columns">
      <%= f.label :cNombreSite, 'Nombre Site' %>
      <%= f.text_field :cNombreSite, readonly: @readonly %>       
    </div>      
    <div class="small-12 medium-2 large-2 columns">
      <%= f.label :nBCC, 'Nº Emplazamiento' %>
      <%= f.number_field :nBCC, readonly: @readonly %>       
    </div>            
    <div class="small-12 medium-2 large-2 columns">
      <%= f.label @radio_site.tipo_site.nCodTipo, 'Tipo Site' %>
      <%= f.collection_select(:nCodTipo, TipoSite.all, :nCodTipo, :cDescripcion, {},{:disabled => @readonly}) %>
    </div>      
    <div class="small-12 medium-2 large-2 columns">         
      <%= f.label :nCodEstado, 'Estado' %>     
      <%= f.select :nCodEstado, options_for_select([["Activa",1], ["Baja", 2]], @radio_site.nCodEstado), {}, {:disabled => @readonly} %><br>
    </div>      
  </div>  

  <div class="row">
    <div class="small-12 medium-2 large-2 columns">
      <%= f.label :nCodSede, 'Código Sede' %>
      <%= f.number_field :nCodSede, readonly: @readonly %> 
    </div>    

    <%= f.fields_for :sede, @radio_site.sede do |fs| %>
      <div class="small-12 medium-4 large-4 columns">
        <%= f.label :cNombre, 'Nombre Sede' %>
        <%= fs.text_field :cNombre, readonly: @readonly %> 
      </div>
      <div class="small-12 medium-6 large-6 columns">
        <%= f.label :cDireccion, 'Dirección Sede' %>        
        <%= fs.text_field :cDireccion, readonly: @readonly %> 
      </div>      
    <% end %>
  </div>        
  </br>  
  <div class="row">
    <div class="small-12 medium-12 large-12 columns">
      <%= render 'accordion' %>
    </div>    
  </div>    
  <!--GESTION DE BOTONES -->
  <div class="row text-right">
    <div class="small-12 medium-12 large-12 columns">
      <%= link_to '<< Volver', radio_site_path, :class => "button small" %>        
      <% if can? :read, RadioSite %> 
          <%= link_to 'Editar', edit_radio_site_path(@radio_site), :class => "button small" %> 
      <% end %>
    </div>   
  </div> 
</div>   
<% end %>   
