<%= search_form_for @q do |f| %>
  
  <div class="row">
    <div class="small-2 medium-1 large-6 columns">
      <h3 class="columns">Usuarios</h3>
    </div>
    <div class="small-2 medium-1 large-6 columns">
      <% if can? :cru, TUsuario %>    
        <%= link_to 'Nuevo Usuario', new_t_usuario_path, :class => "button float-right"  %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-2 medium-1 large-1 columns">
      <%= f.label :t_usuario_cont, 'Buscar', for: "middle-label", class: "text-right" %>
    </div>
    <div class="small-2 medium-1 large-7 columns">
      <%= f.search_field :t_usuario_cont %>
    </div>
    <div class="small-2 medium-1 large-1 columns">
      <label for="middle-label" class="text-right ">Activo</label>
    </div>
    <div class="small-10 medium-3 large-2 columns">      
      <%= f.select :bActivo_eq, [["",nil], ["Sí", true], ["No", false]] %>
    </div>
  </div>

  <div class="row" >      
    <div class="small-2 medium-1 large-12 columns">      
      <%= f.submit :class => "button float-right" %>      
      <%= link_to "Limpiar", request.path, :class => "button float-right" %>
    </div>
  </div>
      
  </form>              

</div>

<% end %>


<div class="row clearfix">
  <ul class="paginate">
  <%= paginate(@t_usuarios) %>
  </ul>
</div>
<div class="row text-right">
<%= page_entries_info @t_usuarios, :entry_name => 'usuarios' %><br/><br/>
</div>

<div class="table-scroll-horizontal">
  <table>
    <thead>
      <tr>        
        <th><%= sort_link(@q, :cCodUsuario, 'Código') %></th>
        <th><%= sort_link(@q, :cNombre, 'Nombre') %></th>
        <th><%= sort_link(@q, :cCorreo, 'Correo') %></th>
        <th><%= sort_link(@q, :bActivo, 'Activo') %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @t_usuarios.each do |t| %>
        <tr>            
          <td><%= link_to t.cCodUsuario, t, :class => 'link' %></td>
          <td><%= t.cNombre %></td>
          <td><%= t.cCorreo %></td>
          <td><%= t.bActivo ? "Sí": "No"  %></td>                
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row text-right">
<%= page_entries_info @t_usuarios, :entry_name => 'usuarios' %><br/><br/>
</div>

<div class="row">
  <ul class="paginate">
  <%= paginate(@t_usuarios) %>
  </ul>
</div>