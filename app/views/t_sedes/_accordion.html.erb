<ul class="accordion margin-bottom" data-accordion data-multi-expand="true" data-allow-all-closed="true">
    <!--- SAP -->
    <li class="accordion-item" data-accordion-item>
        <a href="#" class="accordion-title">Unidad SAP/ Edificio SAP</a>
        <div class="accordion-content" data-tab-content >        
            <h5>UNIDAD SAP</h5>
            <div class="row">
                <div class="small-4  medium-2 large-2 columns">
                    <label for="middle-label">Cod. Unidad:</label>
                </div>
                
                <div class="small-8  medium-10 large-2 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.nCodUni rescue nil %></label>
                </div>
        
                <div class="small-4 medium-2 large-2 columns">
                    <label for="middle-label">Unidad:</label>                    
                </div>
                
                <div class="small-8 medium-10 large-6 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.cDenominacion rescue nil %></label>
                </div>
            </div>

            <div class="row">
                <div class="small-4 medium-2 large-2 columns">
                    <label for="middle-label">Dirección:</label>                    
                </div>
                
                <div class="small-8 medium-10 large-10 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.cDir rescue nil %></label>
                </div>
            </div>

            <div class="row">
                <div class="small-4 medium-2 large-2 columns">                    
                    <label for="middle-label">Cod. Postal:</label>
                </div>
                
                <div class="small-8 medium-2 large-2 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.cCodPostal rescue nil %></label>
                </div>
            
                <div class="small-4 medium-2 large-2 columns">
                    <label for="middle-label">Municipio:</label>                    
                </div>
                
                <div class="small-8 medium-6 large-6 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.cMunicipio rescue nil %></label>
                </div>
            </div>

            <div class="row">
                <div class="small-4  medium-2 large-2 columns">                    
                    <label for="middle-label">Centro Coste:</label>
                </div>
                
                <div class="small-8 medium-10 large-10 columns">
                    <label for="middle-label"><%= @t_sede.t_unidad.cCodCenCoste rescue nil %></label>
                </div>
            </div>

        <br>
        
            <p>EDIFICIO SAP</p>

            <div class="row">
                <div class="small-4  medium-2 large-2 columns">
                    <label for="middle-label">Código:</label>
                </div>
                
                <div class="small-8  medium-10 large-10 columns">
                    <label for="middle-label"><%= @t_sede.t_edificio.nCodEdificio rescue nil %></label>
                </div>
            </div>

            <div class="row">
                <div class="small-4  medium-2 large-2 columns">
                    <label for="middle-label">Dirección:</label>
                </div>

                <div class="small-8  medium-10 large-10 columns">
                    <label for="middle-label"><%= @t_sede.t_edificio.cTipoVia rescue nil %> <%= @t_sede.TEdificio.cNombreCalle rescue nil %></label>
                </div>
            </div>

            <div class="row">
                <div class="small-4  medium-2 large-2 columns">                    
                    <label for="middle-label">Número:</label>
                </div>
                
                <div class="small-8  medium-2 large-2 columns">
                    <label for="middle-label"><%= @t_sede.t_edificio.cNumero rescue nil %></label>
                </div>
        
                <div class="small-4 medium-2 large-2 columns">
                    <label for="middle-label">Cód. Postal:</label>                    
                </div>
                
                <div class="small-8  medium-2 large-2 columns">
                    <label for="middle-label"><%= @t_sede.t_edificio.cCodPostal rescue nil %></label>
                </div>
            
                <div class="small-4  medium-2 large-2 columns">                    
                    <label for="middle-label">Municipio:</label>
                </div>
                
                <div class="small-8  medium-2 large-2 columns">
                    <label for="middle-label"><%= @t_sede.t_edificio.cMunicipio rescue nil %></label>
                </div>
            </div>

        </div>
    </li>    
    <!--- CONTACTO -->
    <li class="accordion-item" data-accordion-item>
        <a href="#" class="accordion-title">Contacto</a>
        <div class="accordion-content" data-tab-content >      
            
            <div class="row">
                <div class="small-5  medium-2 large-1 columns">
                    <label for="middle-label">Persona:</label>
                </div>
                <div class="small-7  medium-10 large-5 columns">
                    <label for="middle-label"><%= @t_sede.cPersonaContacto %></label>
                </div>
            
                <div class="small-5  medium-2 large-1 columns">
                    <label for="middle-label">Mail:</label>
                </div>

                <div class="small-7  medium-10 large-5 columns">
                    <label for="middle-label"><%= @t_sede.ceMailContacto %></label>
                </div>
            </div>
            
            <div class="row">
                <div class="small-5  medium-2 large-1 columns">
                    <label for="middle-label">Fijo:</label>
                </div>

                <div class="small-7  medium-4 large-2 columns">
                    <label for="middle-label"><%= @t_sede.cTelefonoContacto %></label>
                </div>
            
                <div class="small-5  medium-3 large-2 columns large-text-right ">
                    <label class = " " for="middle-label">Corto Fijo:</label>
                </div>
                
                <div class="small-7  medium-3 large-1  columns">
                    <label  for="middle-label"><%= @t_sede.cCortoFijo %></label>
                </div>
            
                <div class="small-5  medium-2 large-1 columns">
                    <label for="middle-label">Móvil:</label>
                </div>
                
                <div class="small-7  medium-4 large-2 columns">
                    <label for="middle-label"><%= @t_sede.cMovilContacto %></label>
                </div>
            
                <div class="small-5  medium-3 large-2 columns large-text-right">
                    <label for="middle-label">Corto Móvil:</label>
                </div>
                
                <div class="small-7  medium-3 large-1 columns">
                    <label for="middle-label"><%= @t_sede.cCortoMovil %></label>
                </div>
            </div>

            <div class="row margin-bottom">
                <div class="small-5  medium-2 large-1 columns">
                    <label for="middle-label">Observac.:</label>
                </div>

                <div class="small-7  medium-10 large-11 columns">
                    <label for="middle-label"><%= @t_sede.cPersonaContactoObserv %></label>
                </div>
            </div>

            <label class="" for="middle-label">TÉCNICOS SICAM:</label>
            <br>
            <div class="">
                
                <table class="stack">
                    <thead class="color-cabecera">                                              
                        <tr>                
                            <th>Técnico</th>
                            <th>Tlf. Fijo</th>
                            <th>Tlf. Móvil</th>
                            <th>E-Mail</th>
                        </tr>
                    </thead>
                
                    <tbody>                
                        <% @t_sede.t_sicam_persona_grupos.each do |t| %>
                            <tr>        
                                <td><%=  t.Full_Name %></td>           
                                <td><%=  t.SICAM_txt_telefono_contacto %></td>    
                                <td><%=  t.Phone_Number_Mobile %></td>    
                                <td><%=  t.Internet_E_mail %></td>                               
                            </tr>                    
                        <% end %>                
                    </tbody>
                </table>
            </div>

        </div>

    </li>
    <!--- INFRAESTRUCTURA -->
    <li class="accordion-item" data-accordion-item>
        <a href="#" class="accordion-title">Infraestructura</a>
        <div class="accordion-content" data-tab-content>
            
        </div>
    </li>
    <!--- ACTUACIONES -->
    <li class="accordion-item" data-accordion-item>
        <a href="#" class="accordion-title">Actuaciones</a>
        <div class="accordion-content" data-tab-content>
            
        </div>
    </li>
    <!--- MAPA -->
    <li class="accordion-item" data-accordion-item>
        <a href="#" class="accordion-title">Ubicación en mapa</a>
        <div class="accordion-content" data-tab-content>
            <div class="row text-center" >

                <% if @t_sede.cLatitud.nil?  %>
                    <iframe 
                        width="100%" 
                        height= "400px"
                        frameborder="0" 
                        scrolling="no" 
                        marginheight="0" 
                        marginwidth="0" 
                        src="https://www.google.es/maps/embed/v1/place?key=AIzaSyANl_IlDg2a1xumlDuMC4-c5QHFYYGUHUc
                        &q=<%= @t_sede.cDireccion %>">                            
                    </iframe>

                <% else %>

                    <iframe 
                        width="100%" 
                        height= "400px"
                        frameborder="0" 
                        scrolling="no" 
                        marginheight="0" 
                        marginwidth="0" 
                        src = "https://maps.google.com/maps?q=<%= @t_sede.cLatitud %>,<%= @t_sede.cLongitud%>
                        &z=20&amp;output=embed&amp;iwloc=">                            
                    </iframe>
                <% end %>
                
            </div>

        </div>

    </li>

</ul>