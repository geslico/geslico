<%= render 'search' %>


<div class="row">
  <ul class="paginate">
  <%= paginate(@lin_moviles) %>
  </ul>
</div>

<div class="row text-left">
  <%= page_entries_info @lin_moviles %>
  <!-- <%= link_to current_url(:format=>:csv), class: "float-right", title: 'Exportar a csv' do %>
      <i class="fi-page-export-csv large icon"></i><% end %>-->
</div>

<div class="table-scroll">
  <table>
    <thead class="color-cabecera">
      <tr>        
        <th><%= sort_link(@q, :linea_cNumero ) %></th>        
        <th><%= sort_link(@q, :linea_cNumCorto ) %></th>                  
        <th><%= sort_link(@q, :persona_cnombre  ) %></th>  
        <th><%= sort_link(@q, :persona_cApellidos  ) %></th>
        <th><%= sort_link(@q, :persona_cempnompuesto  ) %></th>
        <th><%= sort_link(@q, :linea_unidad_nCodUni ) %></th>
        <th><%= sort_link(@q, :linea_unidad_cDenominacion  ) %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @lin_moviles.each do |t| %>
        <tr>            
          <td><%= link_to t.linea.cNumero==nil ? '' : t.linea.cNumero , t, :class => 'link' %></td>                    
          <td><%= link_to t.linea.cNumCorto==nil ? '' : t.linea.cNumCorto , t, :class => 'link' %></td>                                        
          <td><%= t.persona.cnombre rescue nil %></td>          
          <td><%= t.persona.cApellidos rescue nil %></td>
          <td><%= t.persona.cempnompuesto rescue nil %></td>
          <td><%= t.linea.unidad.nCodUni rescue nil %></td>
          <td><%= t.linea.unidad.cDenominacion rescue nil %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row text-left">
<%= page_entries_info @lin_moviles %><br/><br/>
</div>

<div class="row">
  <ul class="paginate">
  <%= paginate(@lin_moviles) %>
  </ul>
</div>