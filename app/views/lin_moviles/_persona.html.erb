<li class="accordion-item  is-active" data-accordion-item>
    <a href="#" class="accordion-title">Empleado</a>
        <div class="accordion-content" data-tab-content >                                  
            <div class="row">
                <div class="small-12 medium-2 large-2 columns">                                        
                    <%= f.label :cDNI, for: 'middle-label' %>      
                    <%= f.text_field :cDNI , for: 'middle-label', :readonly => @readonly , data: {ajax_target: "ajax_persona", ajax_show: "#ajax_persona_show", ajax_url: personas_show_results_path  } %>
                </div>  
                
                <div class="small-12 medium-3 large-4 columns">
                    <label> <%= t(:cnombre) %> <label>
                    <input type="text" readonly="true" value="<%= persona.cnombre rescue nil %>"></input>                                        
                </div>
                <div class="small-12 medium-3 large-3 columns">                
                    <label> Apellido 1 <label>
                    <input type="text" readonly="true" value="<%= persona.cape1 rescue nil %>"></input>                                        
                </div>
                <div class="small-12 medium-3 large-3 columns">
                    <label> Apellido 2 <label>
                    <input type="text" readonly="true" value="<%= persona.cape2 rescue nil %>"></input>                                        
                </div>                
            </div>
            <div id="ajax_persona_show"></div>
            <div class="row">
                <div class="small-6 medium-2 large-1 columns">                
                    <label> Grupo <label>
                    <input type="text" readonly="true" value="<%= persona.cempgrupotit rescue nil %>"></input>                                        
                </div>
                <div class="small-6 medium-2 large-1 columns">                
                    <label> Nivel <label>
                    <input type="text" readonly="true" value="<%= persona.nempnivel rescue nil %>"></input>                                                            
                </div>
                <div class="small-12 medium-8 large-4 columns">
                    <label> Puesto <label>
                    <input type="text" readonly="true" value="<%= persona.cempnompuesto rescue nil %>"></input>                                                            
                </div>
                <div class="small-10 medium-7 large-3 columns">                
                    <label> Correo <label>                                        
                    <input type="text" readonly="true" value="<%= persona.cemail rescue nil %>"></input>
                </div>
                <div class="small-2 medium-1 large-1 columns">
                    <label>&nbsp;</label>
                    <%= ciscoim_to persona.cemail, "medium" rescue nil %>
                </div>
                <div class="small-12 medium-4 large-2 columns">                
                    <label> UsuarioAYRE <label>
                    <input type="text" readonly="true" value="<%= persona.cUsuarioAYRE rescue nil %>"></input>                                                            
                </div>
            </div>
            <div class="row">
                <div class="small-12 medium-3 large-2 columns">                
                    <label> CodUni <label>
                    <input type="text" readonly="true" value="<%= persona.ncoduni rescue nil %>"></input>                                        
                    
                </div>
                <div class="small-12 medium-9 large-10 columns">                
                    <label> Unidad <label>
                    <input type="text" readonly="true" value="<%= persona.unidad.cDenominacion rescue nil %>"></input>                                        
                    
                </div>
                <div class="small-12 medium-3 large-2 columns">                
                    <label> IdArea <label>
                    <input type="text" readonly="true" value="<%= persona.unidad.nIdArea rescue nil %>"></input>                                        
                    
                </div>
                <div class="small-12 medium-9 large-10 columns end">                
                    <label> √Årea <label>
                    <input type="text" readonly="true" value="<%= persona.unidad.area.cDenominacion rescue nil %>"></input>                                        
                </div>
            </div>
    </div>
</li>