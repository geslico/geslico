                    <label> Puesto <label>
                    <input type="text" readonly="true" value="<%= persona.cempnompuesto rescue nil %>"></input>                                                            
                </div>
                <div class="small-10 medium-7 large-3 columns">                
                    <label> Correo <label>                                        
                    <input type="text" readonly="true" value="<%= persona.cemail rescue nil %>"></input>
                </div>
                <div class="small-2 medium-1 large-1 columns">
                    <label>&nbsp;</label>
                    <%= ciscoim_to persona.cemail, "medium" rescue nil %>
                </div>
                <div class="small-12 medium-4 large-2 columns">                
                    <label> UsuarioAYRE <label>
                    <input type="text" readonly="true" value="<%= persona.cUsuarioAYRE rescue nil %>"></input>                                                            
                </div>
            </div>
            <div class="row">
                <div class="small-12 medium-3 large-2 columns">                
                    <label> CodUni <label>
                    <input type="text" readonly="true" value="<%= persona.ncoduni rescue nil %>"></input>                                        
                    
                </div>
                <div class="small-12 medium-9 large-10 columns">                
                    <label> Unidad <label>
                    <input type="text" readonly="true" value="<%= persona.unidad.cDenominacion rescue nil %>"></input>                                        
                    
                </div>
                <div class="small-12 medium-3 large-2 columns">                
                    <label> IdArea <label>
                    <input type="text" readonly="true" value="<%= persona.unidad.nIdArea rescue nil %>"></input>                                        
                    
                </div>
