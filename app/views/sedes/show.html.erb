<div class="row"> 
  <h3 class="columns "> Sede </h3>
</div>

<div class="row">

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Código:</label>
    </div>

    <div class="small-8 medium-4 large-2 columns">
      <label for="middle-label"><%= @sede.nCodSede %></label>
    </div>

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Cabecera:</label>
    </div>
    
    <div class="small-8 medium-4 large-1 columns">
      <% if  @sede.nCodCampus.nil? %>
          <label for="middle-label">-</label>
      <% else %>
          <% if  @sede.nCodCampus == @sede.nCodSede  %>                      
              <label for="middle-label">SI</label>
          <% else %>
              <label for="middle-label">NO</label>
          <% end %>
      <% end %>
    </div>

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Criticidad:</label>
    </div>

    <div class="small-8 medium-4 large-2 columns">

      <% if @sede.nCriticidad.nil? %>
          <label for="middle-label">-</label>
      <% else %>
          <% if  @sede.nCriticidad == 0  %>                      
              <label for="middle-label">Normal</label>
          <% else %>
              <% if  @sede.nCriticidad == 1  %>
                <label for="middle-label">Urgente</label>
              <% else %>
                <% if  @sede.nCriticidad == 2  %>
                  <label for="middle-label">Crítico</label>
                <% end %>
              <% end %>      
          <% end %>
      <% end %>

    </div>

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Estado:</label>
    </div>
  
    <div class="small-8 medium-4 large-3 columns end">
        <label for="middle-label"><%= @sede.estados_sede.cDescripcion if !@sede.nCodEstado==nil? %></label>               
    </div>
    
 </div>

 <div class="row">

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Nombre:</label>
    </div>

    <div class="small-8 medium-4 large-7 columns end">      
      <label for="middle-label"><%= @sede.cNombre %></label>
    </div>

    <div class="small-4 medium-2 large-1 columns">
      <label for="middle-label">Distrito:</label>
    </div>

    <div class="small-8 medium-4 large-3 columns end">
      <label for="middle-label"><%= @sede.distrito.cDistrito if !@sede.nDistrito==nil? %></label>
    </div>

</div>

<div class="row">
    <div class="small-4  medium-2 large-1 columns">
        <label for="middle-label">Dirección:</label>
     </div>

     <div class="small-8  medium-4 large-7 columns">
        <label for="middle-label"><%= @sede.cDireccion %></label>
     </div>

    <div class="small-4  medium-2 large-1 columns">
        <label for="middle-label">Cód.Postal:</label>
     </div>

     <div class="small-8  medium-4 large-3 columns">
        <label for="middle-label"><%= @sede.cCodPostal %></label>
     </div>
</div>

<div class="row">
     <div class="small-4  medium-2 large-1 columns">
       <label for="middle-label">DevicePool:</label>
     </div>

     <div class="small-8  medium-4 large-4 columns">
        <% if !@sede.cDevicePool.nil? %>
          <label for="middle-label"><%= @sede.device_pool.cDevicePool %></label>
        <% else %>
          <label for="middle-label">-</label>
        <% end %>
     </div>

     <div class="small-4  medium-2 large-1 columns">
        <label for="middle-label">Acrónimo:</label>
     </div>

     <div class="small-8  medium-4 large-2 columns">
        <% if  !@sede.nIdAcronimo.nil?  %>
          <label for="middle-label"><%= @sede.acronimos_sede_edr.cCodigo %></label>
        <% else %>
          <label for="middle-label">-</label>
        <% end %>
     </div>

     <div class="small-4  medium-2 large-1 columns">
       <label for="middle-label">Gestión:</label>
     </div>

     <div class="small-8  medium-4 large-3 columns end">

        <% if  @sede.nCodGestion.nil?  %>
          <label for="middle-label">-</label>
        <% else %>
            <% if  @sede.nCodGestion == 0  %>                      
                <label for="middle-label">Municipal</label>
            <% else %>
                <% if  @sede.nCodGestion == 1  %>
                  <label for="middle-label">Privada</label>
                <% else %>
                  <% if  @sede.nCodGestion == 2  %>
                    <label for="middle-label">Mixta</label>
                  <% else %>
                    <% if  @sede.nCodGestion == 3  %>
                      <label for="middle-label">Otras Administ</label>
                    <% end %>
                  <% end %>
                <% end %>      
            <% end %>
        <% end %>

     </div>
</div>

<div class="row margin-bottom">
     <div class="small-4  medium-2 large-1 columns">
       <label for="middle-label">Grupo:</label>
     </div>

     <div class="small-8  medium-4 large-4 columns">
        <% if  !@sede.nZona.nil?  %>
          <label for="middle-label"><%= @sede.zona.cGrupo %></label>
        <% else %>
          <label for="middle-label">-</label>
        <% end %>
     </div>

     <div class="small-4  medium-2 large-1 columns">
        <label for="middle-label">Zona:</label>
     </div>

     <div class="small-8  medium-4 large-2 columns">
        <% if  !@sede.nZona.nil?  %>
          <label for="middle-label"><%= @sede.zona.cZona %></label>
        <% else %>
          <label for="middle-label">-</label>
        <% end %>
     </div>

     <div class="small-4  medium-2 large-1 columns">
       <label for="middle-label">ToIp:</label>
     </div>

     <div class="small-8  medium-4 large-3 columns end">                 
        <% if  @sede.bSedeToIP.nil?  %>
          <label for="middle-label">-</label>
        <% else %>                  
          <% if  @sede.bSedeToIP == true  %>
            <label for="middle-label">SI</label>
          <% else %>
            <% if  @sede.bSedeToIP == false  %>
              <label for="middle-label">NO</label>
            <% end %>
          <% end %>                  
        <% end %>
     </div>
</div>

<!--GESTION DE BOTONES -->
<div class="row">
  <div class="small-12 medium-6 large-6 columns text-left">                 
    <% if !@sede.sede_folder.nil? %>
      <%= link_to @sede.sede_folder.to_s, target: :_blank, title: 'Ficheros adjuntos' do %>
      <i class="fi-folder xlarge icon"></i><% end %>                         
      <%= link_to sede_foto_url, title: 'Imágenes Sede' do %>
      <i class="fi-camera xlarge icon"></i><% end %>                                                         
    <% end %>        
  </div>
  <div class="small-12 medium-6 large-6 columns text-right">                 
    <%= link_to '<< Volver', sedes_path, :class => "button small" %>        
    <% if can? :read, Sede %> 
        <%= link_to 'Editar', edit_sede_path(@sede), :class => "button small" %> 
    <% end %>
  </div>  
</div>     

<%= render 'accordion' %>